<UserControl
    x:Class="ProjectManager.WPFComponents.TileMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">
    <UserControl.Background>
        <ImageBrush ImageSource="{Binding BackgroundImageName}"></ImageBrush>
    </UserControl.Background>
    <dxwui:PageAdornerControl Header="{Binding MenuTitle}">
        <dxlc:TileLayoutControl ItemsSource="{Binding Tiles}"/>
    </dxwui:PageAdornerControl>
</UserControl>
